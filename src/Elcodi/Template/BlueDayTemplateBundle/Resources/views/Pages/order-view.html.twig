{% extends '@BlueDayTemplate/Layout/_layout.html.twig' %}

{% block content %}
    {% if thanks %}
        <div class="message message-ok">
            <p><i class="icon-check"></i> <strong>{{ 'template.BlueDay_bundle.order.view.congratulations'|trans }}</strong></p>
            <p>{{ 'template.BlueDay_bundle.order.view.thanks'|trans }}</p>
        </div>
    {% else %}
        <h1>{{ 'template.BlueDay_bundle.order.view.order'|trans }} #{{ order.id }}</h1>
    {% endif %}
    <div class="cart-list">
        {% for line in order.orderLines %}
            {% include "@BlueDayTemplate/Modules/_order-item.html.twig" with {"line": line} %}
        {% endfor %}
    </div>
    <div class="coupon-list">
        {% for orderCoupon in orderCoupons %}
            {% include "@BlueDayTemplate/Modules/_order-coupon-item.html.twig" with {"orderCoupon": orderCoupon} %}
        {% endfor %}
    </div>
    <p class="cart-total"><span>{{ 'template.BlueDay_bundle.order.view.shipping'|trans }}</span> {{ order.shippingAmount|print_convert_money() }}</p>
    <p class="cart-total"><span>{{ 'template.BlueDay_bundle.order.view.total'|trans }} </span>{{ order.amount|print_convert_money() }}</p>
    <div class="cart-actions">
        <a class="button button-empty cart-actions-continue" href="{{ url('store_homepage') }}"><i class="icon-arrow-left"></i> {{ 'template.BlueDay_bundle.order.view.continue_shopping'|trans }}</a>
    </div>

{% endblock %}
