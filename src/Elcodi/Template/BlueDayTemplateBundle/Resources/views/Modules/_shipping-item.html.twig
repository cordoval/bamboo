{% if shippingRange is null %}
    {% if app.user is null %}
        <p class="message message-info">{{ "template.BlueDay_bundle.shipping.costs_will_be_calculated_after_login"|trans }}</p>
    {% else %}
        {% if cart.cheapestShippingRange is not null %}
            {% set shippingRange = cart.cheapestShippingRange %}
            <p class="cart-shipping"><span>{{ 'template.BlueDay_bundle.shipping.carrier'|trans }} ({{ shippingRange.carrier.name }}) {{ "template.BlueDay_bundle.shipping.from"|trans }} </span> {{ shippingAmount|print_convert_money() }}</p>
        {% elseif cart.deliveryAddress is null  %}
            <p class="message message-info">{{ "template.BlueDay_bundle.shipping.costs_will_be_calculated_after_address"|trans }}</p>
        {% else %}
            <p class="message message-ko">{{ "template.BlueDay_bundle.shipping.no_shipping_matching"|trans }}</p>
        {% endif %}
    {% endif %}
{% else %}
    <p class="cart-shipping"><span>{{ 'template.BlueDay_bundle.shipping.carrier'|trans }} ({{ shippingRange.carrier.name }})</span> {{ shippingAmount|print_convert_money() }}</p>
{% endif %}
